@page "/users"

<PageTitle>Users</PageTitle>

<MudText Typo="Typo.h3">Users</MudText>

<MudDivider Vertical></MudDivider>

<MudButton
    Href="/users/create"
    StartIcon="@Icons.Material.Filled.Add"
    Size="Size.Small"
    Variant="Variant.Filled"
    Color="Color.Info">
    Create
</MudButton>

<MudDataGrid Items="Users">
    <Columns>
        <PropertyColumn Property="u => u.Name" Title="UserName"></PropertyColumn>
        <PropertyColumn Property="u => u.Email"></PropertyColumn>
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudButton
                        Variant="Variant.Filled"
                        StartIcon="@Icons.Material.Filled.List"
                        Color="Color.Info"
                        Size="Size.Large"
                        onclick="@(() => GoToReviews(context.Item.Id))">
                        Reviews
                    </MudButton>
                    <MudButton
                        StartIcon="@Icons.Material.Filled.Edit"
                        Size="Size.Small"
                        Variant="Variant.Filled"
                        Color="Color.Info"
                        onClick="@(() => GoToUpdate(context.Item.Id))">
                        Edit
                    </MudButton>
                    <MudButton
                        StartIcon="@Icons.Material.Filled.Delete"
                        Size="Size.Small"
                        Variant="Variant.Filled"
                        Color="Color.Error"
                        onClick="@(() => DeleteUserAsync(context.Item.Id))">
                        Delete
                    </MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>