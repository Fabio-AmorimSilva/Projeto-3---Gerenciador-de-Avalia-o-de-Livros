@page "/users/create"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<MudCard>
    <EditForm Model="@UserInputModel" OnValidSubmit="OnValidSubmitAsync">
        <MudCardContent>
            <MudTextField
                @bind-Value="UserInputModel.Name"
                For="@(() => UserInputModel.Name)"
                Label="Name" 
                Placeholder="Insert name here..."/>
            
            <MudTextField 
                @bind-Value="UserInputModel.Email"
                For="@(() => UserInputModel.Email)"
                Label="Email" 
                Placeholder="Insert email here...."/>
                
            <MudTextField 
                @bind-Value="UserInputModel.Password"
                For="@(() => UserInputModel.Password)"
                Label="Password"
                InputType="PasswordInputType"
                Adornment="Adornment.End" 
                AdornmentIcon="@PasswordInputIcon" 
                OnAdornmentClick="PasswordTextField"
                AdornmentAriaLabel="Show Password"
                Placeholder="Insert password here..."/>
            
            <MudButton Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Color="Color.Info"
                       Size="Size.Large"
                       ButtonType="ButtonType.Submit">
                Create
            </MudButton>
        </MudCardContent>
    </EditForm>
</MudCard>